@page
@model AspEventGrupp.Pages.EventsModel

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="container d-flex justify-content-center">
    @foreach ( var item in Model.Event )
    {
        <div class="card mx-2" style="width: 18rem;">
            <img src="~/images/1-2.jpg" class="card-img-top" />
            <div class="card-body d-flex flex-column">
                <h5 class="text-center">@Html.DisplayFor(modelItem => item.Title) </h5>
                <p>Decription: @Html.DisplayFor(modelItem => item.Description)</p>
                <p>Location: @Html.DisplayFor(modelItem => item.Location)</p>
                <p>Adress: @Html.DisplayFor(modelItem => item.Adress)</p>
                <p>Date: @Html.DisplayFor(modelItem => item.Date)</p>
                <p>Tickets left: @Html.DisplayFor(modelItem => item.SpotsLeft)</p>

                <a class="btn btn-primary align-self-center" asp-route-id="@item.Id" asp-page="JoinEvent" asp-area="">Join Event</a>
            </div>
        </div>
    }
</div>

