@page
@model AspEventGrupp.Pages.EventsModel

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>

@if (User.IsInRole("Organizer"))
{
    <div class="d-flex justify-content-center">
        <p>
            <a asp-page="/Organizer/AddEvent" class="btn btn-info">Create New</a>
        </p>
    </div>

}
<div class="container d-flex justify-content-center">
    @foreach (var item in Model.Event)
    {
        <div class="card mx-2" style="width: 18rem; background:none;">
            <img src="@item.EventImage" class="card-img-top" style="width: 252px; height: 168px;" />
            <div class="card-body d-flex flex-column">
                <h4 class="text-center">@Html.DisplayFor(modelItem => item.Title) </h4>
                <p>Location: @Html.DisplayFor(modelItem => item.Location)</p>
                <p>Adress: @Html.DisplayFor(modelItem => item.Adress)</p>
                <p>Date: @Html.DisplayFor(modelItem => item.Date)</p>
                <p>Tickets left: @Html.DisplayFor(modelItem => item.SpotsLeft)</p>
            </div>
            <div>
                <a class="btn btn-primary m-2" asp-route-id="@item.Id" asp-page="JoinEvent">Join Event</a>

            </div>
        </div>
    }
</div>

