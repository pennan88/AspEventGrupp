@using Microsoft.AspNetCore.Identity
@using AspEventGrupp.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav flex-grow-1 justify-content-end">
    @if ( SignInManager.IsSignedIn(User) )
    {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-outline-secondary mx-2">Logout</button>
        </form>
    </li>
    }
    else
    {

    <li class="nav-item mx-2">
        <a class="btn btn-outline-primary mx-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item mx-2">
        <a class="btn btn-outline-secondary mx-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>

    }

    @if(SignInManager.IsSignedIn(User) && User.Identity.Name == "Administator")
    {
    <li>
        <a class="btn btn-danger mx-2"asp-page="/ManageUser">Manage Users</a>
    </li>
    }
</ul>
