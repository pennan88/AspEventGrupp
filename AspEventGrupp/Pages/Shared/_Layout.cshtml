<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspEventGrupp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="bg" style="position: relative; width: 100%; height: 100%;">
        <img src="~/images/1.webp" style="background-position: left center; background-repeat: no-repeat; background-size: cover; float: none; width: 100%; height:100%" />
        <div class="innerdiv" style="left: 0; position: absolute; text-align: center; top: 0; width: 100%; z-index: 1;">

            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent mb-3">
                    <div class="container d-sm-inline-flex">
                        <ul class="navbar-nav flex-grow-1 justify-content-start">
                            <li class="nav-item mx-2">
                                <a class="btn btn-primary " asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="btn btn-success" asp-area="" asp-page="/Events">Upcoming Events</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="btn btn-success" asp-area="" asp-page="/MyEvents">My Events</a>
                            </li>
                        </ul>
                    </div>
                    <div class="container d-sm-inline-flex border-1">
                        <partial name="_LoginPartial">
                    </div>
                </nav>

            </header>
            <div class="container">
                <main role="main" class="">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="d-flex justify-content-around">
            <span>
                &copy; 2021 - ASP_NET_Inlämningsuppgift_Facit - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </span>
            <a type="button" class="btn btn-danger" asp-route-resetDb="true">Resset DataBase</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
