@page
@model AspEventGrupp.Pages.JoinEventModel

@{
    ViewData["Title"] = "JoinEvent";
}

<div class="container">
    <h1 class="text-center">@Model.Event.Title</h1>
    <div class="container d-flex justify-content-center">
        <div class="card mx-2" style="width: 30rem; background:none;">
            <img src="@Model.Event.EventImage" class="card-img-top" style="width:478px; height:267px;" />
            <div class="d-flex flex-column">
                <div>
                    <p><b> @Html.DisplayNameFor(model => model.Event.Description)</b></p>
                    <p>@Html.DisplayFor(model => model.Event.Description)</p>
                </div>
                <div>
                    <p><b>@Html.DisplayNameFor(model => model.Event.Adress)</b></p>
                    <p>@Html.DisplayFor(model => model.Event.Adress)</p>
                </div>
                <div>
                    <p><b>@Html.DisplayNameFor(model => model.Event.Location)</b></p>
                    <p>@Html.DisplayFor(model => model.Event.Location)</p>
                </div>
                <div>
                    <p><b>@Html.DisplayNameFor(model => model.Event.Date)</b></p>
                    <p>@Html.DisplayFor(model => model.Event.Date)</p>
                </div>
                <div>
                    <p><b>@Html.DisplayNameFor(model => model.Event.SpotsLeft)</b></p>
                    <p>@Html.DisplayFor(model => model.Event.SpotsLeft)</p>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <form method="post">
                    <input class="m-2 btn btn-success align-self-center" type="submit" value="Join Event" />
                </form>
                <a class="m-2 btn btn-success align-self-center" asp-page="/Events">Back to List</a>
            </div>
        </div>
    </div>
</div>

