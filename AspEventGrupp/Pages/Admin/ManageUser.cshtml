@page
@model AspEventGrupp.Pages.ManageUserModel

@inject RoleManager<IdentityRole> role

@{
    ViewData["Title"] = "ManageUser";
}

<h1>ManageUser</h1>

<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <form method="post">
                        <div class="input-group mb-3">
                            <select class="form-select mx-2" id="inputGroupSelect02">
                                <option value="1">Organizer</option>
                                <option value="2">User</option>
                            </select>
                            <input type="submit" class="btn btn-outline-info mx-2" for="inputGroupSelect02" />
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


